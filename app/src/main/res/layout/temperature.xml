<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:background="#E6E6FA"
        >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="温度"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/showtemperaturebg">

        <TextView
            android:id="@+id/showTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="15dp"
            android:text="21℃"
            android:textColor="@color/red_dark"
            android:textSize="50sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/increasetemperature"
            android:background="@drawable/red_circle_button"
            android:text="升温"
            android:textSize="40sp"
            android:textColor="@color/rice_white"/>

        <Button
            android:layout_marginLeft="35dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/green_circle_button"
            android:text="降温"
            android:textSize="40sp"
            android:textColor="@color/rice_white"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="最佳温度:"/>

        <TextView
            android:id="@+id/temperature_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="18℃~21℃"
            android:textColor="@color/blue"/>
    </LinearLayout>

</LinearLayout>