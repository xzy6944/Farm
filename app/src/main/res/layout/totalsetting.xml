<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background">

    <LinearLayout style="@style/wrap_layout" android:layout_marginTop="20dp">

        <LinearLayout style="@style/top_layout"
            android:layout_marginTop="10dp">
            <TextView style="@style/usertext" android:text="附近的人" android:textColor="@color/light_text"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="扫一扫" android:textColor="@color/light_text"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="清空缓存" android:textColor="@color/light_text"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout" android:layout_marginTop="50dp">

        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="是否接受消息通知" android:textColor="@color/light_text"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="开"
                android:textOff="关"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="省流量模式" android:textColor="@color/light_text"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="开"
                android:textOff="关"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
